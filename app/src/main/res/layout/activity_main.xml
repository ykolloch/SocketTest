<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yannic.tcp.MainActivity">


    <TextView
        android:text="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tfServer"
        android:layout_toRightOf="@+id/tfServer"
        android:layout_toEndOf="@+id/tfServer"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/tfServerStatus" />

    <TextView
        android:text="ServerSocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/tfServer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp" />

    <TextView
        android:text="Client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tfServer"
        android:layout_alignLeft="@+id/tfServer"
        android:layout_alignStart="@+id/tfServer"
        android:layout_marginTop="15dp"
        android:id="@+id/tfClient" />

    <TextView
        android:text="Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tfClient"
        android:layout_alignLeft="@+id/tfClient"
        android:layout_alignStart="@+id/tfClient"
        android:layout_marginTop="15dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfClientStatus"
        android:layout_alignBaseline="@+id/tfClient"
        android:layout_alignBottom="@+id/tfClient"
        android:layout_alignLeft="@+id/tfServerStatus"
        android:layout_alignStart="@+id/tfServerStatus" />

    <TextView
        android:text="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/tfClientStatus"
        android:layout_alignStart="@+id/tfClientStatus"
        android:id="@+id/tfDataStatus" />
</RelativeLayout>
